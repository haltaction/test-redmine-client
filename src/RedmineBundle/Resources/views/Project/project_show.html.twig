{% extends "RedmineBundle::base.html.twig" %}

{% block title %}Project show{% endblock %}

{% block body %}
    <a class="btn btn-default" href="{{ path('projects_list') }}" role="button">Back to projects</a>

    <div class="page-header">
        <h1>Project "{{ project.name }}"</h1>
        <span class="bg-info">Spent time - {{ projectTime }} hours</span>
    </div>

    <div class="bottom-line">
        <a class="btn btn-default" href="{{ path('issues_list', {'projectId': project.id}) }}" role="button">Issues list</a>
    </div>

    <div class="bottom-line comment-form-wrapper">
        {% block comment_form %}
            {{ render(controller('RedmineBundle:Comment:createComment', {'projectId': project.id})) }}
        {% endblock %}
    </div>

    <div class="comment-list-wrapper">
        {{ render(controller('RedmineBundle:Comment:listComment', {'projectId': project.id})) }}
    </div>

{% endblock %}
